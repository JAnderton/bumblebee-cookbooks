server {
    server_name *.<%= @site_config['name'] %>;
    rewrite ^(.*) http://<%= @site_config['name'] %>$1 permanent;
}

server {
	<% if @site_config['ssl']['enabled'] %>
	listen 443;
	<% end %>
	listen 80;

	server_name <%= @site_config['name'] %>;

	<% if @site_config['ssl']['enabled'] %>
		ssl on;
		ssl_certificate <%= @site_config['ssl']['certificate_location'] %>;
		ssl_certificate_key  <%= @site_config['ssl']['certificate_key_location'] %>;

	<% end %>
	root <%= @www_root %>/<%= @site_config['name'] %>;
	index index.html index.htm;

	client_max_body_size 20m;
	client_body_buffer_size 128k;
}
